{
  "$id": "discourse_connector",
  "$schema": "https://schema.yext.com/config/km/connector/v2",
  "displayName": "Discourse Topics Connector",
  "entityType": "Discourse_discourseTopic",
  "source": {
    "sourceConfig": {
      "apiPushConfig": {
        "app": "123672",
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "Entity Container",
      "path": "topics"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Name",
        "path": "title"
      },
      {
        "type": "JSON",
        "header": "Slug",
        "path": "slug"
      },
      {
        "type": "JSON",
        "header": "Number of Posts",
        "path": "posts_count"
      },
      {
        "type": "JSON",
        "header": "Number of Replies",
        "path": "reply_count"
      },
      {
        "type": "JSON",
        "header": "Date Created",
        "path": "created_at"
      },
      {
        "type": "JSON",
        "header": "Date of Last Post",
        "path": "last_posted_at"
      },
      {
        "type": "JSON",
        "header": "Category ID",
        "path": "category_id"
      },
      {
        "type": "JSON",
        "header": "Image Url",
        "path": "image_url"
      },
      {
        "type": "JSON",
        "header": "First Post Username",
        "path": "firstPost.value.name"
      },
      {
        "type": "JSON",
        "header": "First Post Text",
        "path": "firstPost.value.cooked"
      },
      {
        "type": "JSON",
        "header": "First Post Author",
        "path": "firstPost.value.name"
      },
      {
        "type": "JSON",
        "header": "First Post Number",
        "path": "firstPost.value.post_number"
      },
      {
        "type": "JSON",
        "header": "First Post Topic ID",
        "path": "firstPost.value.topic_id"
      },
      {
        "type": "JSON",
        "header": "First Post is Accepted Answer",
        "path": "firstPost.value.accepted_answer"
      },
      {
        "type": "JSON",
        "header": "First Post Avatar",
        "path": "firstPost.value.avatar_template"
      },
      {
        "type": "JSON",
        "header": "Thread Username",
        "path": "thread[].username"
      },
      {
        "type": "JSON",
        "header": "Thread Text",
        "path": "thread[].cooked"
      },
      {
        "type": "JSON",
        "header": "Thread Author",
        "path": "thread[].name"
      },
      {
        "type": "JSON",
        "header": "Thread Number",
        "path": "thread[].post_number"
      },
      {
        "type": "JSON",
        "header": "Thread Topic ID",
        "path": "thread[].topic_id"
      },
      {
        "type": "JSON",
        "header": "Thread is Accepted Answer",
        "path": "thread[].accepted_answer"
      },
      {
        "type": "JSON",
        "header": "Thread Avatar",
        "path": "thread[].avatar_template"
      }
    ]
  },
  "transforms": [
    {
      "findAndReplace": {
        "inputHeaders": {
          "headers": [
            "Date of Last Post",
            "Date Created"
          ]
        },
        "valueToFind": {
          "regex": "T.*"
        },
        "replacement": ""
      }
    },
    {
      "formatDates": {
        "inputHeaders": {
          "headers": [
            "Date of Last Post",
            "Date Created"
          ]
        },
        "inputFormat": "yyyy-MM-dd"
      }
    },
    {
      "findAndReplace": {
        "inputHeaders": {
          "headers": [
            "First Post Avatar",
            "Thread Avatar"
          ]
        },
        "valueToFind": {
          "plainText": {
            "value": "{size}",
            "ignoreCase": false
          }
        },
        "replacement": "120"
      }
    }
  ],
  "mappings": [
    {
      "field": "discourse_lastPostedAt",
      "header": "Date of Last Post",
      "subfieldPath": []
    },
    {
      "field": "discourse_firstDiscoursePost",
      "header": "First Post is Accepted Answer",
      "subfieldPath": [
        {
          "name": "acceptedAnswer"
        }
      ]
    },
    {
      "field": "discourse_firstDiscoursePost",
      "header": "First Post Text",
      "subfieldPath": [
        {
          "name": "text"
        }
      ]
    },
    {
      "field": "photoGallery",
      "header": "Image Url",
      "subfieldPath": [
        {
          "name": "image"
        },
        {
          "name": "url"
        }
      ]
    },
    {
      "field": "slug",
      "header": "Slug",
      "subfieldPath": []
    },
    {
      "field": "discourse_replyCount",
      "header": "Number of Replies",
      "subfieldPath": []
    },
    {
      "field": "discourse_categoryID",
      "header": "Category ID",
      "subfieldPath": []
    },
    {
      "field": "discourse_firstDiscoursePost",
      "header": "First Post Username",
      "subfieldPath": [
        {
          "name": "username"
        }
      ]
    },
    {
      "field": "discourse_firstDiscoursePost",
      "header": "First Post Topic ID",
      "subfieldPath": [
        {
          "name": "topicID"
        }
      ]
    },
    {
      "field": "name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "discourse_firstDiscoursePost",
      "header": "First Post Avatar",
      "subfieldPath": [
        {
          "name": "avatar"
        },
        {
          "name": "url"
        }
      ]
    },
    {
      "field": "discourse_discourseThread",
      "header": "Thread Avatar",
      "subfieldPath": [
        {
          "name": "avatar"
        },
        {
          "name": "url"
        }
      ]
    },
    {
      "field": "entityId",
      "header": "Entity ID",
      "subfieldPath": []
    },
    {
      "field": "discourse_postCount",
      "header": "Number of Posts",
      "subfieldPath": []
    },
    {
      "field": "discourse_firstDiscoursePost",
      "header": "First Post Number",
      "subfieldPath": [
        {
          "name": "postNumber"
        }
      ]
    },
    {
      "field": "discourse_discourseThread",
      "header": "Thread Author",
      "subfieldPath": [
        {
          "name": "author"
        }
      ]
    },
    {
      "field": "discourse_discourseThread",
      "header": "Thread Topic ID",
      "subfieldPath": [
        {
          "name": "topicID"
        }
      ]
    },
    {
      "field": "discourse_firstDiscoursePost",
      "header": "First Post Author",
      "subfieldPath": [
        {
          "name": "author"
        }
      ]
    },
    {
      "field": "discourse_discourseThread",
      "header": "Thread is Accepted Answer",
      "subfieldPath": [
        {
          "name": "acceptedAnswer"
        }
      ]
    },
    {
      "field": "discourse_discourseThread",
      "header": "Thread Number",
      "subfieldPath": [
        {
          "name": "postNumber"
        }
      ]
    },
    {
      "field": "discourse_dateCreatedAt",
      "header": "Date Created",
      "subfieldPath": []
    },
    {
      "field": "discourse_discourseThread",
      "header": "Thread Username",
      "subfieldPath": [
        {
          "name": "username"
        }
      ]
    },
    {
      "field": "discourse_discourseThread",
      "header": "Thread Text",
      "subfieldPath": [
        {
          "name": "text"
        }
      ]
    }
  ],
  "scheduleConfig": {
    "useSourceSchedule": false,
    "runMode": "DEFAULT"
  }
}