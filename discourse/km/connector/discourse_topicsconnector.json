{
  "$id": "discourse_connector",
  "$schema": "https://schema.yext.com/config/km/connector/v2",
  "displayName": "Discourse Topics Connector",
  "entityType": "Discourse_discourseTopic",
  "source": {
    "sourceConfig": {
      "apiPushConfig": {
        "app": "123672",
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "Entity Container",
      "path": "topics"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Name",
        "path": "title"
      },
      {
        "type": "JSON",
        "header": "Slug",
        "path": "slug"
      },
      {
        "type": "JSON",
        "header": "Number of Posts",
        "path": "posts_count"
      },
      {
        "type": "JSON",
        "header": "Number of Replies",
        "path": "reply_count"
      },
      {
        "type": "JSON",
        "header": "Date Created",
        "path": "created_at"
      },
      {
        "type": "JSON",
        "header": "Date of Last Post",
        "path": "last_posted_at"
      },
      {
        "type": "JSON",
        "header": "Category ID",
        "path": "category_id"
      },
      {
        "type": "JSON",
        "header": "Image Url",
        "path": "image_url"
      }
    ]
  },
  "transforms": [
    {
      "findAndReplace": {
        "inputHeaders": {
          "headers": [
            "Date of Last Post",
            "Date Created"
          ]
        },
        "valueToFind": {
          "regex": "T.*"
        },
        "replacement": ""
      }
    },
    {
      "formatDates": {
        "inputHeaders": {
          "headers": [
            "Date of Last Post",
            "Date Created"
          ]
        },
        "inputFormat": "yyyy-MM-dd"
      }
    }
  ],
  "mappings": [
    {
      "field": "entityId",
      "header": "Entity ID",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "slug",
      "header": "Slug",
      "subfieldPath": []
    },
    {
      "field": "discourse_postCount",
      "header": "Number of Posts",
      "subfieldPath": []
    },
    {
      "field": "discourse_replyCount",
      "header": "Number of Replies",
      "subfieldPath": []
    },
    {
      "field": "discourse_dateCreatedAt",
      "header": "Date Created",
      "subfieldPath": []
    },
    {
      "field": "discourse_lastPostedAt",
      "header": "Date of Last Post",
      "subfieldPath": []
    },
    {
      "field": "discourse_categoryID",
      "header": "Category ID",
      "subfieldPath": []
    },
    {
      "field": "photoGallery",
      "header": "Image Url",
      "subfieldPath": [
        {
          "name": "image"
        },
        {
          "name": "url"
        }
      ]
    }
  ],
  "scheduleConfig": {
    "useSourceSchedule": false,
    "runMode": "DEFAULT"
  }
}