{
  "$id": "discourse_connector",
  "$schema": "https://schema.yext.com/config/km/connector/v1",
  "displayName": "Discourse Topics Connector",
  "entityType": "Discourse_discourseTopic",
  "source": {
    "sourceConfig": {
      "apiPushConfig": {
        "app": "123672",
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "Entity Container",
      "path": "topics"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Name",
        "path": "title"
      },
      {
        "type": "JSON",
        "header": "Slug",
        "path": "slug"
      },
      {
        "type": "JSON",
        "header": "Number of Posts",
        "path": "postsCount"
      },
      {
        "type": "JSON",
        "header": "Number of Replies",
        "path": "replyCount"
      }
    ]
  },
  "transforms": [
    
  ],
  "mappings": [
    {
      "field": "entityId",
      "header": "Entity ID",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "slug",
      "header": "Slug",
      "subfieldPath": []
    },
    {
      "field": "discourse_postCount",
      "header": "Number of Posts",
      "subfieldPath": []
    },
    {
      "field": "discourse_replyCount",
      "header": "Number of Replies",
      "subfieldPath": []
    },
  ],
  "scheduleConfig": {
    "useSourceSchedule": false,
    "runMode": "DEFAULT"
  }
}